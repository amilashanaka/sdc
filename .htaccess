# 1. Core Directives
Options -Indexes
DirectoryIndex index.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # 2. Define the Base Path
    # IMPORTANT: Change /my-app/ to your actual sub-directory, 
    # or use / if the app is in the document root.
    RewriteBase /my-app/ 

    # 3. Skip existing assets/files/directories
    # Allow access to assets folder
    RewriteRule ^assets/ - [L]

    # If the request is NOT for an existing file
    RewriteCond %{REQUEST_FILENAME} !-f
    # And the request is NOT for an existing directory
    RewriteCond %{REQUEST_FILENAME} !-d

    # 4. Route everything else to index.php
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>

# 5. Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>